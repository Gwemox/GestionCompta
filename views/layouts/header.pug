doctype html
html(lang="fr")
    head
        title GestionCompta
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(
        name="description"
        content="Projet d'un petit site de facturation en NodeJs dans le cadre de la formation Ing√©sup B3 2017-2018"
        )
        meta(name="author", content="Thibault Buathier")
        link(href="/static/css/main.min.css", rel="stylesheet")
        link(href="/static/css/bootstrap.min.css", rel="stylesheet")
        script(src="/static/js/jquery.min.js")
        script(src="/static/js/jquery.scrollTo.min.js")
    body
        <!-- Navigation -->
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top.bg-faded
            .container
                button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                a.navbar-brand(href="/") GestionCompta
                #navbarResponsive.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        if token && token.user
                            li.nav-item
                                .nav-link Bonjour #{token.user.firstName}
                            li.nav-item
                                a.nav-link(href="/products") Liste des produits
                        else
                            li.nav-item
                                a.nav-link(href="/register") S'enregistrer
                            li.nav-item
                                a.nav-link(href="/login") Se connecter
        #response.alert.hidden(role="alert")