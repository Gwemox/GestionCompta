include /layouts/header.pug

<!-- Page Content -->
.container
    form(method='POST' action='/api/authenticate' id='authenticateForm')
        div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email' required)
        div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
        button.btn.btn-primary(type='submit') Se connecter

script(src="static/js/login.js")

include /layouts/footer.pug